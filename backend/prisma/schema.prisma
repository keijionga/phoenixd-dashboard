generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PaymentLog {
  id          String   @id @default(cuid())
  type        String   // incoming or outgoing
  paymentHash String?
  paymentId   String?
  amountSat   Int
  description String?
  status      String   // pending, completed, failed
  rawData     Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([paymentHash])
  @@index([createdAt])
}

model Invoice {
  id            String   @id @default(cuid())
  paymentHash   String   @unique
  serialized    String
  amountSat     Int?
  description   String?
  externalId    String?
  expirySeconds Int      @default(3600)
  isPaid        Boolean  @default(false)
  createdAt     DateTime @default(now())
  expiresAt     DateTime
  paidAt        DateTime?

  @@index([externalId])
  @@index([isPaid])
}

model Offer {
  id          String   @id @default(cuid())
  serialized  String
  amountSat   Int?
  description String?
  createdAt   DateTime @default(now())
}

model NodeInfo {
  id        String   @id @default("singleton")
  nodeId    String
  chain     String
  version   String?
  rawData   Json
  updatedAt DateTime @updatedAt
}
